{
  "name": "jeevanlink",
  "description": "Jeevan Link - Link Shortener Project",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --force-local",
    "build:frontend": "lerna run build --scope frontend-nextjs",
    "clean": "lerna run clean",
    "dev": "lerna run --parallel dev",
    "start": "lerna run --parallel start",
    "frontend": "lerna run start --scope frontend-nextjs --parallel",
    "backend": "lerna run start --scope backend-nodejs --parallel",
    "dev-backend": "lerna run dev --scope backend-nodejs --parallel",
    "dev-frontend": "lerna run dev --scope frontend-nextjs --parallel"
  },
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
